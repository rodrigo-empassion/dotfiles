[core]
    pager = delta
    precomposeUnicode = true
    editor = nvim

[init]
    defaultBranch = main

[ssh]
    variant = ssh

[user]
    email = rodrigo.garcia-leon@empassion.com
    name = Rodrigo García León

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[github]
    user = rodrigo.garcia-leon@empassion.com

[advice]
    detachedHead = false

[alias]
    a = add
    br = branch
    ca = commit --amend
    can = commit --amend --no-edit
    ci = commit
    co = checkout
    cp = cherry-pick
    df = diff
    fa = fetch --all --prune
    st = status
    p = push
    pf = push --force
    pl = pull
    re = rebase

[merge]
    conflictstyle = diff3

[diff]
    tool = delta
    colorMoved = default

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true
